    <script>
        window.showModal = function (modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                // Remove aria-hidden attribute to fix accessibility issue
                modal.removeAttribute('aria-hidden');
                const bootstrapModal = bootstrap.Modal.getOrCreateInstance(modal);
                bootstrapModal.show();
            }
        };
        
        window.hideModal = function (modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                const bootstrapModal = bootstrap.Modal.getInstance(modal);
                if (bootstrapModal) {
                    bootstrapModal.hide();
                }
            }
        };
        
        // Test function to verify JavaScript interop is working
        window.testBlazorConnection = function () {
            console.log("JavaScript interop is working!");
            return "JavaScript interop is working!";
        };
    </script>

@if (IsVisible)
{
    <div class="loading-overlay @(FullScreen ? "position-fixed" : "position-absolute") top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center" 
         style="background-color: rgba(255, 255, 255, 0.8); z-index: 1050; @(FullScreen ? "" : "position: relative;")">
        <div class="text-center">
            <div class="spinner-border @Size" role="status" style="color: @Color;">
                <span class="visually-hidden">Loading...</span>
            </div>
            @if (!string.IsNullOrEmpty(Message))
            {
                <div class="mt-2 text-muted">@Message</div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public string Message { get; set; } = "";
    [Parameter] public bool FullScreen { get; set; } = false;
    [Parameter] public string Size { get; set; } = ""; // "", "spinner-border-sm", "spinner-grow", etc.
    [Parameter] public string Color { get; set; } = "#0d6efd"; // Bootstrap primary color
} 
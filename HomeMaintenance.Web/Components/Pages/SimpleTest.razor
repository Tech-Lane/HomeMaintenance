@page "/simple-test"

<PageTitle>Simple Test - Home Maintenance</PageTitle>

<div class="container">
    <h1>Simple Blazor Test</h1>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Basic Button Test</h5>
                </div>
                <div class="card-body">
                    <p>Click the button below to test if Blazor is working:</p>
                    <button class="btn btn-primary" @onclick="IncrementCounter">
                        Click me! Count: @counter
                    </button>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Status</h5>
                </div>
                <div class="card-body">
                    <p><strong>Blazor Status:</strong> @(isWorking ? "✅ Working" : "❌ Not Working")</p>
                    <p><strong>Counter:</strong> @counter</p>
                    <p><strong>Last Click:</strong> @lastClickTime</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private int counter = 0;
    private bool isWorking = false;
    private string lastClickTime = "Never";

    private void IncrementCounter()
    {
        counter++;
        isWorking = true;
        lastClickTime = DateTime.Now.ToString("HH:mm:ss");
        Console.WriteLine($"Button clicked! Counter: {counter}");
    }
} 